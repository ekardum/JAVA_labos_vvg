<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.FlowPane?>
<?import javafx.scene.layout.VBox?>

<BorderPane xmlns="http://javafx.com/javafx/9.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="hr.java.vjezbe.javafx.DrzaveController">
   <center>
      <VBox alignment="CENTER" prefHeight="340.0" prefWidth="341.0" BorderPane.alignment="CENTER">
         <children>
            <Label styleClass="pretraga-label" text="Pretraga država" />
            <FlowPane alignment="CENTER" prefHeight="200.0" prefWidth="200.0">
               <children>
                  <Label styleClass="label-textbox" text="Naziv:" />
                  <TextField fx:id="drzaveFilterTextField" />
                  <Button mnemonicParsing="false" onAction="#prikaziDrzave" text="Pretraži" />
               </children>
            </FlowPane>
            <TableView fx:id="drzaveTableView" prefHeight="200.0" prefWidth="200.0">
              <columns>
                <TableColumn fx:id="nazivColumn" prefWidth="75.0" text="Naziv" />
                <TableColumn fx:id="povrsinaColumn" prefWidth="75.0" text="Površina" />
              </columns>
            </TableView>
         </children>
      </VBox>
   </center>
</BorderPane>
